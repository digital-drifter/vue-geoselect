{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es6",
      "es7",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
